<%= form_with(model: user, url: proverka_path) do |form| %>
  <%= render "shared/error_messages", resource: user %>

  <div class="field">
    <%= form.label :firstname %><br />
    <%= form.text_field :firstname, autofocus: true, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= form.label :lastname %><br />
    <%= form.text_field :lastname, autofocus: true, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= form.label :technical_level %><br />
    <%= form.text_field :technical_level, autofocus: true, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= form.label :company_name %><br />
    <%= form.text_field :company_name, autofocus: true, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= form.label :status %><br />
    <%= form.text_field :status, autofocus: true, class: 'form-control'  %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class:'btn btn-primary' %>
  </div>
<% end %>
