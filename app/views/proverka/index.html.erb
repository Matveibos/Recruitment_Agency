
<div class="container">
  <div class="row info" style="text-align:center;"></div>
<%@user.each do |usr| %>
  <div class="resume">
    <header class="page-header">
      <h1 class="page-title">Profile <%=usr.firstname%> <%=usr.lastname%></h1>
      <small> <i class="fa fa-clock-o"></i> Last Updated on: <%=usr.updated_at%> </small>
    </header>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
        <div class="panel panel-default">
          <div class="panel-heading resume-heading">
            <div class="row">
              <div class="col-lg-12">
                <div class="col-xs-12 col-sm-4">
                  <figure>
                    <img class="img-circle img-responsive" alt="" src="http://placehold.it/300x300">
                  </figure>
                </div>

                <div class="col-xs-12 col-sm-8">
                  <ul class="list-group">
                    <li class="list-group-item"><%=usr.firstname%> <%=usr.lastname%></li>
                    <li class="list-group-item"><%=usr.technical_level%></li>
                    <li class="list-group-item"><%=usr.company_name%> </li>
                    <li class="list-group-item"><i class="fa fa-envelope"></i> <%=usr.email%></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <br>
        <%= link_to 'Edit profile',edit_proverka_path(usr),:class =>'btn btn-warning'  %>
        <%= link_to 'Show Technology stack', techstacks_path(:entity_id => usr.id, :entity_type => "User"), :class =>'btn btn-warning'  %>
        <%= link_to 'Add Technology stack', new_techstack_path(:entity_id => usr.id, :entity_type => "User"), :class =>'btn btn-warning'  %>
      </div>
    </div>
  </div>
</div>
<%end %>